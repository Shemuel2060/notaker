<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>


<?xml-model href=""?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.arola.notaker.controllers.RefFXMLDocumentController"
	alignment="CENTER" hgap="30" vgap="20">
	<!-- <padding> <insets top="25" bottom="25" left="25" right="25" /> </padding> -->
	
	
	<Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="Title:" />
	<TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="titleTextField" />

	<Label GridPane.rowIndex="2" GridPane.columnIndex="0" text="Reference URL:" />
	<TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="urlTextField" />

	<Label GridPane.rowIndex="3" GridPane.columnIndex="0" text="Author:" />
	<TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="authorTextField" />

	<Button GridPane.rowIndex="4" GridPane.columnIndex="1" text="Add Reference" onAction="#addReference" />
</GridPane>
